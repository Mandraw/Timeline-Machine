extends layout

block content
    .container
        form
            .form-group
                label.col-sm-2.control-label(for='name') Name
                input.form-control(placeholder='Enter Name...', type='text')
            .form-group
                label.col-sm-2.control-label(for='description') Description
                textarea.form-control(placeholder='Enter Description...')
            .form-group
                .input-group
                    label.col-sm-4.control-label(for='range') Range of your timeline and unit of time
                    .col-sm-8
                    input.form-control.col-sm-6(placeholder='10000', type='number')
                    input.form-control.col-sm-6(placeholder='unitOfTime', type='text')
            .form-group
                label.col-sm-4.control-label(for='website') Do you want to keep this Timeline private ?
                label.checkbox-inline.col-sm-6
                    input(type='checkbox', value='option1')
                    |           Yes